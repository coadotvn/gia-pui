@import './fonts'

:root
  --base-pixel 2px
  --neg-base-pixel calc(-1 * var(--base-pixel))
  --base-text-stroke .15em
  --neg-base-text-stroke calc(-1 * var(--base-text-stroke))

  --base-line var(--base-pixel) solid black
  
  --font-family-default retro, consolas, monospace
  --font-family-header impostor, consolas, monospace
  --font-family-body freepixel, consolas, monospace
  --color-primary #6ebfb5
  --color-success #a0c334
  --color-warning #f8b500
  --color-error #ff5858

html
body
  padding 0
  margin 0
  font-family var(--font-family-default)
  font-size 12px
  color-rendering optimizespeed
  text-rendering optimizespeed
  image-rendering pixelated

button
input
  font-family var(--font-family-default)

h1
  font-family var(--font-family-header)
  font-weight normal
h2
h3
h4
h5
h6
  font-family var(--font-family-default)
  font-weight normal

p
  color #555
